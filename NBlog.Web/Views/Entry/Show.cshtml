@model EntryController.ShowModel
@{
    View.Title = Model.Title;
}

<article class="entry">
    @if (Model.IsAdmin)
    {
        <div class="admin-box">
            Admin:
            @Html.ActionLink("Edit", "Edit", "Entry", new { id = Model.Slug }, null)
        </div>
    }
    <h1>@Model.Title</h1>
    
    @Html.Safe(@Model.Html)

    <div class="entry-date">
        @Model.Date
    </div>
</article>