<div id="container">
	<header>
		<div id="site">
			<div id="site-name">
				@Model.SiteTitle
			</div>
			<div id="tag-line">@Model.SiteTagline</div>
		</div>
        
		<div id="topbar">
			<div id="links" class="text-links">
                @(Model.IsAuthenticated ? Html.Safe("<strong>" + Model.FriendlyUsername + "</strong> |") : Html.Blank())
                @Html.ActionLink("Home", "Index", "Home") |
                @Html.ActionLink("RSS", "Index", "Feed") |
				<a href="#">Contact</a> |
				@(Model.IsAuthenticated ? Html.ActionLink("Sign Out", "Logout", "Authentication") : Html.ActionLink("Sign In", "Login", "Authentication"))
			</div>
			<div id="search">
				<form>
					<input type="text" class="box" name="q" value="search" />
				</form>
			</div>
		</div>
	</header>

	@RenderBody()
	
	<footer>

	</footer>
</div>


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"></script>
