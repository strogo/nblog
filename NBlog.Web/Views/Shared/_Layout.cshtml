<script src="/resources/scripts/jquery.validate.js"></script>
<script src="/resources/scripts/jquery.validate.unobtrusive.js"></script>


<script>
    $(function () {
        $("input:submit, input:button, a.button, button").button();
    });
</script>

@RenderSection("Scripts", required:false)

